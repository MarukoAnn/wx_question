.sub_content {
  height: 100vh;
  width: 100vw;
  background: #7399F7;
  overflow: hidden;
}
.sub_content .content {
  width: 100vw;
  height: 100vh;
  overflow: scroll;
  position: relative;
}
.sub_content .content .title-image image {
  width: 100%;
  height: 30vh;
}
.sub_content .content .content-view {
  margin: 0 4vw 6vh 4vw;
  background: #FFFFFF;
  border-radius: 20rpx;
  position: absolute;
  top: 24vh;
  box-shadow: 13rpx 18rpx 15rpx #6E87C4;
  text-align: center;
}
.sub_content .content .content-view .subcript-test {
  margin-top: 2vh;
  color: #000;
  padding: 0 3vw 5vh 3vw;
  text-align: left;
  font-size: 40rpx;
}
.sub_content .content .content-view .close-btn {
  background: #FFEF6B;
  border-radius: 45rpx;
  width: 60vw;
  margin-top: -4vh;
  position: absolute;
  margin-left: 18vw;
  box-shadow: 0rpx 15rpx 0rpx #BDB258;
}
.sub_content .content .content-view .close-btn .icon {
  font-size: 26px;
  vertical-align: middle;
}
.sub_content .title {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 16px;
  padding: 2vh 2vw;
  background-color: #ECECEC;
}
.sub_content .mycanvas {
  width: 90vw;
  height: calc(80vh - 200rpx);
  background-color: #FFF;
}
.sub_content .footer {
  font-size: 16px;
  height: 150rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #ECECEC;
}
.sub_content .left, .sub_content .right {
  line-height: 100rpx;
  height: 100rpx;
  width: 250rpx;
  text-align: center;
  font-weight: bold;
  color: white;
  border-radius: 5rpx;
}
.sub_content .left {
  background: #007AFF;
}
.sub_content .right {
  background: orange;
}

