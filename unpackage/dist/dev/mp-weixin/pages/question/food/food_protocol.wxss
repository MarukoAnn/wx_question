.food_body {
  height: 100vh;
  width: 100vw;
  background: #FA8E74;
  overflow: hidden;
}
.food_body .food-content {
  width: 100vw;
  height: 100vh;
  overflow: scroll;
}
.food_body .food-content .content {
  height: 100vh;
  position: relative;
  overflow: auto;
  width: 100vw;
}
.food_body .food-content .content .title-image image {
  width: 100%;
  height: 30vh;
}
.food_body .food-content .content .content-view {
  margin: 0 4vw;
  background: #FFFFFF;
  border-radius: 20rpx;
  position: absolute;
  top: 24vh;
  padding-bottom: 4vh;
  margin-bottom: 6vh;
  box-shadow: 13rpx 18rpx 15rpx #C77F6E;
  text-align: center;
}
.food_body .food-content .content .content-view .subcript-test {
  margin-top: 2vh;
  color: #000;
  padding: 2vh 3vw;
  text-align: left;
  font-size: 40rpx;
}
.food_body .food-content .content .content-view .subcript-test .precautions-content {
  background: #FEE8E3;
}
.food_body .food-content .content .content-view .close-btn {
  background: #FFEF6B;
  border-radius: 45rpx;
  width: 60vw;
  position: absolute;
  bottom: -23px;
  margin-left: 18vw;
  box-shadow: 0rpx 15rpx 0rpx #BDB258;
}
.food_body .food-content .content .content-view .close-btn .icon {
  font-size: 26px;
  vertical-align: middle;
}

