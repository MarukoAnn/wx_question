.success {
  width: 100vw;
  height: 100vh;
  background: #FA8E74;
}
.success .content {
  height: 100vh;
  position: relative;
  width: 100vw;
}
.success .content .title-image image {
  width: 100%;
  height: 30vh;
}
.success .content .score-view {
  margin: 0 4vw;
  height: 64vh;
  padding-bottom: 4vh;
  background: #FFFFFF;
  border-radius: 20rpx;
  position: absolute;
  top: 24vh;
  box-shadow: 13rpx 18rpx 15rpx #C67462;
}
.success .content .score-view .score-test {
  margin-top: 2vh;
  padding: 2vh 5vw;
  height: 80%;
  position: relative;
  font-size: 40rpx;
  width: 82vw;
  text-align: center;
}
.success .content .score-view .score-test .score-image {
  margin-top: 4vh;
  margin-bottom: 2vh;
}
.success .content .score-view .score-test .score-image image {
  height: 30vw;
  width: 30vw;
}
.success .content .score-view .score-test .physical-script {
  position: absolute;
  left: 4vw;
  right: 4vw;
  bottom: 0vh;
  text-align: left;
  border-radius: 15px;
  background: #F5F5F5;
  color: #9F9F9F;
  padding: 2vh 1vw;
}
.success .content .score-view .close-btn {
  background: #FFEF6B;
  border-radius: 45rpx;
  width: 60vw;
  bottom: -23px;
  position: absolute;
  margin-left: 16vw;
  box-shadow: 0rpx 15rpx 0rpx #BDB258;
}
.success .content .score-view .close-btn .icon {
  font-size: 26px;
  vertical-align: middle;
}

