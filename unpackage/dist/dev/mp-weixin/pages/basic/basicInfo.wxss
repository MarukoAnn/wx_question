}
.info-content .basic-content .question-title .progress-bar .bar {
  text-align: center;
  margin-top: 4vh;
}
.info-content .basic-content .question-title .progress-bar .bar .bar-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 26rpx;
}
.info-content .basic-content .question-title .progress-bar .bar .out-bar {
  width: 100%;
  background: #FFFFFF;
  height: 2vh;
  border: 1px solid #DFDFDF;
  border-radius: 35px;
}
.info-content .basic-content .question-title .progress-bar .bar .out-bar .inner-bar {
  background: -webkit-linear-gradient(left, #366EEC 0%, #23C9F7 100%);
  background: linear-gradient(to right, #366EEC 0%, #23C9F7 100%);
  height: 80%;
  margin: 2rpx 0;
  border-radius: 35px;
}
.info-content .basic-content .question-title .questions-select-contion {
  background: #F7F7F7;
  width: 92vw;
